{
  "name": "@jujulego/tasks",
  "version": "2.2.0",
  "license": "MIT",
  "author": "Julien Capellari <julien.capellari@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/jujulego/tasks"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.js",
    "default": "./dist/index.js"
  },
  "scripts": {
    "lint": "eslint .",
    "clean": "shx rm -r dist",
    "build": "jill group 'build:esm // build:types'",
    "build:esm": "swc -d dist src",
    "build:types": "tsc --project tsconfig.build.json",
    "test": "vitest run",
    "test:types": "vitest typecheck"
  },
  "packageManager": "yarn@3.6.4",
  "dependencies": {
    "@jujulego/event-tree": "^4.2.0",
    "@jujulego/logger": "^0.2.2",
    "@jujulego/utils": "^2.0.0",
    "tree-kill": "^1.2.2"
  },
  "devDependencies": {
    "@jujulego/jill": "2.5.2",
    "@jujulego/vite-plugin-swc": "1.2.0",
    "@microsoft/eslint-formatter-sarif": "3.1.0",
    "@swc/cli": "0.1.63",
    "@swc/core": "1.3.100",
    "@types/node": "16.18.101",
    "@typescript-eslint/eslint-plugin": "6.14.0",
    "@typescript-eslint/parser": "6.14.0",
    "@vitest/coverage-v8": "2.0.2",
    "eslint": "8.55.0",
    "eslint-plugin-vitest": "0.3.16",
    "typescript": "5.2.2",
    "vite": "5.0.8",
    "vite-tsconfig-paths": "4.2.2",
    "vitest": "2.0.2"
  }
}
